@model FaculdadeSI.Models.Pergunta

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes da pergunta</h2>

@*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>*@


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Pergunta</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPergunta)
        <div class="form-group">
            @Html.LabelFor(model => model.DescricaoPergunta, "Descrição da pergunta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.DescricaoPergunta)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TipoRespostas, "Resposta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoResposta", null, new { multiple = "multiple", @id = "tipoResposta" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PerguntaStatus,"Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                    @Html.DisplayFor(model => model.PerguntaStatus)
                
            </div>
        </div>

    </div>
}

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdPergunta }) |
    @Html.ActionLink("Voltar", "Index")
</p>

